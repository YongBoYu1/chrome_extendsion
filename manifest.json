{
  "manifest_version": 3,
  "name": "Page Processor",
  "version": "1.0.2",
  "description": "Summarize web pages with AI. Creates readable summaries in new tabs for better reading experience.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://summary-extension-backend-518552901017.us-central1.run.app/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://summary-extension-backend-518552901017.us-central1.run.app https://*.googleapis.com"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["utils/*", "pages/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 