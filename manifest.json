{
  "manifest_version": 3,
  "name": "Page Processor",
  "version": "1.0",
  "description": "Process and summarize web pages",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "http://127.0.0.1:5001/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:* http://127.0.0.1:*; object-src 'self'; connect-src 'self' http://localhost:5001 http://127.0.0.1:5001; style-src 'self' 'unsafe-inline';"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["utils/*", "pages/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 